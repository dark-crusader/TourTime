<%- include('../partials/header') %>

<section class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit your comment</h1>
        <div style="width: 30%; margin: 2rem auto;">

            <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp_id %>">Go Back</a>

        </div>
        
    </div>

</section>
<%- include('../partials/footer') %>
