<%- include('../partials/header') %>

<section class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 2rem auto;">

            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment Text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>

        </div>
        
    </div>

</section>
<%- include('../partials/footer') %>
