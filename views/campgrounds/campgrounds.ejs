<%- include('../partials/header') %>


<section class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to TripTime!</h1>
            <p>A place for camping enthusiasts</p>
            <p>
                <a class="btn btn-primary btn-lg" href="campgrounds/new">Add a new campsite!</a>
            </p>
        </div>
    </header>
        
    <section class="row">
        <div class="col-lg-12">
            <h3>View our campsites catalogue</h3>
        </div>
    </section>

    <section class="row text-center" style="display: flex; flex-wrap: wrap;">

        <% camps.forEach(camp => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image %>">
                    <div class="caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>

    </section>

</section>

<%- include('../partials/footer') %>